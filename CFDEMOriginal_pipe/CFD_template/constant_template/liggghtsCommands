FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          liggghtsCommands;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

liggghtsCommandModels
(
    runLiggghts
    writeLiggghts
);
// ************************************************************************* //


writeLiggghtsProps
{
    // path and name:
    path "../DEM/restart"; // optional setting (default "../DEM")
    writeName "liggghts.restart"; // optional setting (default "liggghts.restartCFDEM")
    overwrite off; // optional setting (default off)
    writeLastOnly off; // optional setting (default on)
    //verbose; // optional setting (default off)
}
